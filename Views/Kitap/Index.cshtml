@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Sayfası</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px;">
        <b>Aranacak Kitap Adını Girin: &nbsp</b> @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </div>
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kitap Yazarı</th>
        <th>Kategorisi</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var kitap in Model)
    {
        <tr>
            <td>@kitap.ID</td>
            <td>@kitap.AD</td>
            @if (kitap.TBLYAZAR != null)
            {
                <td>@kitap.TBLYAZAR.AD&nbsp @kitap.TBLYAZAR.SOYAD</td>
            }
            else
            {
                <td></td>
            }
            @if (kitap.TBLKATEGORI != null)
            {
                <td>@kitap.TBLKATEGORI.AD</td>
            }
            else
            {
                <td></td>
            }
            <td>@kitap.BASIMYIL</td>
            <td>@kitap.YAYINEVI</td>
            <td>@kitap.SAYFA</td>
            <td>@kitap.DURUM</td>
            <td><a href="/Kitap/KitapSil/@kitap.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kitap/KitapGetir/@kitap.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Kitap/KitapEkle" class="btn btn-primary">Yeni Kitap Ekle</a>