@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Al</th>
    </tr>
    @foreach (var oduncKitap in Model)
    {

        <tr>
            <td>@oduncKitap.ID</td>
            @if (oduncKitap.TBLKITAP != null)
            {
                <td>@oduncKitap.TBLKITAP.AD</td>
            }
            else
            {
                <td></td>
            }
            @if (oduncKitap.TBLUYELER != null)
            {
                <td>@oduncKitap.TBLUYELER.AD&nbsp @oduncKitap.TBLUYELER.SOYAD</td>
            }
            else
            {
                <td></td>
            }
            @if (oduncKitap.TBLPERSONEL != null)
            {
                <td>@oduncKitap.TBLPERSONEL.PERSONEL</td>
            }
            else
            {
                <td></td>
            }
            <td>@oduncKitap.ALISTARIH</td>
            <td>@oduncKitap.IADETARIH</td>

            <td><a href="/Odunc/Odunciade/@oduncKitap.ID" class="btn btn-default">Kitabı İade Et</a></td>
        </tr>


    }
</table>

